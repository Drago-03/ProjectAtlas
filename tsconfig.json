{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false
  },
  "exclude": ["node_modules", "dist", "src/webview"],
  "include": ["src/extension", "src/symbolProviders", "tests", "src/webview/ui/App.tsx"]
}
